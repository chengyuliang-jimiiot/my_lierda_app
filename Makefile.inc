

LIOT_CUSTOMER_APP_PATH = $(TOP)/$(APP_DIR)/$(CUSTOMER_DIR)

CFLAGS_INC     +=  -I $(LIOT_CUSTOMER_APP_PATH)/inc
                   
			   
LIOT_CUSTOMER_APP_SRC_DIRS += $(LIOT_CUSTOMER_APP_PATH)/src

LIOT_CUSTOMER_APP_EXCLUDE_FILES :=
		   
LIOT_CUSTOMER_APP_CSRC = $(foreach dir, $(LIOT_CUSTOMER_APP_SRC_DIRS), $(wildcard $(dir)/*.c))
LIOT_CUSTOMER_APP_CFILES = $(filter-out $(LIOT_CUSTOMER_APP_EXCLUDE_FILES), $(LIOT_CUSTOMER_APP_CSRC))
LIOT_CUSTOMER_APP_COBJSTEMP := $(patsubst %.c, %.o, $(LIOT_CUSTOMER_APP_CFILES))
LIOT_CUSTOMER_APP_COBJSTEMP :=$(subst $(LIOT_CUSTOMER_APP_PATH),$(APP_DIR)/$(CUSTOMER_DIR),$(LIOT_CUSTOMER_APP_COBJSTEMP))
LIOT_CUSTOMER_APP_COBJS := $(addprefix $(BUILDDIR)/, $(LIOT_CUSTOMER_APP_COBJSTEMP))

LIOT_CUSTOMER_APP_PPFILES := $(patsubst %.o, %.pp, $(LIOT_CUSTOMER_APP_COBJS))
PPFILES += $(LIOT_CUSTOMER_APP_PPFILES)

ifneq ($(MAKECMDGOALS), unilog)
-include $(LIOT_CUSTOMER_APP_COBJS:.o=.d)
endif
-include $(LIOT_CUSTOMER_APP_COBJS:.o=.dd)

CFLAGS_INC += -I $(TOP)/PLAT/os/freertos/portable/gcc

obj-y += $(LIOT_CUSTOMER_APP_COBJSTEMP)